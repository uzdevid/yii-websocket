{
    "name": "uzdevid/yii-websocket",
    "type": "library",
    "description": "A library that will help process Web Socket messages",
    "keywords": [
        "php",
        "yii3",
        "websocket",
        "centrifugo"
    ],
    "homepage": "https://uzdevid.com/",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "uzdevid/yii-centrifugo": "dev-master"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.7",
        "phpunit/phpunit": "^10.5",
        "rector/rector": "^2.0",
        "roave/infection-static-analysis-plugin": "^1.34",
        "spatie/phpunit-watcher": "^1.23",
        "vimeo/psalm": "^5.20",
        "yiisoft/test-support": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "UzDevid\\Yii\\WebSocket\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "UzDevid\\Yii\\WebSocket\\Tests\\": "tests"
        }
    },
    "extra": {
        "config-plugin-options": {
            "source-directory": "config",
            "build-merge-plan": false
        },
        "config-plugin": {
            "di": "di-*.php",
            "params": "params.php"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "infection/extension-installer": true,
            "yiisoft/config": true
        }
    },
    "scripts": {
        "test": "phpunit --testdox --no-interaction",
        "test-watch": "phpunit-watcher watch"
    }
}
